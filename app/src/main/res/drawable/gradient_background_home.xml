<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradiente superior -->
    <item android:bottom="50dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFFF8C00"
                android:endColor="#FFA500"
                android:angle="90" />
        </shape>
    </item>

    <!-- Color sólido en medio -->
    <item android:top="280dp" android:bottom="50dp">
        <shape android:shape="rectangle">
            <solid android:color="#faf8fb" /> <!-- Cambia el color aquí -->
        </shape>
    </item>

    <!-- Color sólido en la parte inferior -->
    <item android:top="335dp">
        <shape android:shape="rectangle">
            <solid android:color="#DEDFE6" /> <!-- Cambia el color aquí -->
        </shape>
    </item>
</layer-list>